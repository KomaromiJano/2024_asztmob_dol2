<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.komaweb.trapter.TrapterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label id="LabelTitle" text="Trapéz terület számító" />
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label id="LabelASide" text="A oldal" />
            <TextField fx:id="TextFieldASide" GridPane.columnIndex="1" />
            <TextField fx:id="TextFieldBSide" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="TextFieldDSide" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="TextFieldCSide" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label id="LabelBSide" text="B oldal" GridPane.rowIndex="1" />
            <Label id="LabelCSide" text="C oldal" GridPane.rowIndex="2" />
            <Label id="LabelDSide" text="D oldal" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      <Button mnemonicParsing="false" onAction="#Calcalute" text="Számol!" />
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label id="LabelArea" text="Terület" />
            <TextField fx:id="TextFieldArea" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </children>
</VBox>
